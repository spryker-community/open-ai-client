{
    "name": "spryker-community/open-ai-client",
    "type": "library",
    "description": "The OpenAiClient module provides a wrapper around openai-php/client library.",
    "keywords": ["AI", "openAI", "client"],
    "homepage": "https://github.com/spryker-community/open-ai-client",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "openai-php/client": "^0.8.4",
        "spryker/kernel": "^3.73.0"
    },
    "require-dev": {
        "spryker/code-sniffer": "*"
    },
    "autoload": {
        "psr-4": {
            "SprykerCommunity\\": "src/SprykerCommunity/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerCommunityTest\\": "tests/SprykerCommunityTest/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/SprykerStrict/ruleset.xml src/ tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
